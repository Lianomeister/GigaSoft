{
  "name": "gigasoft-vscode",
  "displayName": "GigaSoft Plugin Tools",
  "description": "VS Code support for GigaSoft plugin development.",
  "version": "0.1.0",
  "publisher": "lianomeister",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters"
  ],
  "activationEvents": [
    "onCommand:gigasoft.createPluginTemplate",
    "onCommand:gigasoft.validateManifest",
    "onCommand:gigasoft.checkForUpdates",
    "workspaceContains:**/gigaplugin.yml"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gigasoft.createPluginTemplate",
        "title": "GigaSoft: Create Plugin Template"
      },
      {
        "command": "gigasoft.validateManifest",
        "title": "GigaSoft: Validate gigaplugin.yml"
      },
      {
        "command": "gigasoft.checkForUpdates",
        "title": "GigaSoft: Check Extension Updates"
      }
    ],
    "configuration": {
      "title": "GigaSoft",
      "properties": {
        "gigasoft.plugin.defaultId": {
          "type": "string",
          "default": "my-plugin",
          "description": "Default plugin id used by template generation."
        },
        "gigasoft.plugin.defaultMainClass": {
          "type": "string",
          "default": "plugin.MainPlugin",
          "description": "Default fully qualified main class for gigaplugin.yml."
        },
        "gigasoft.plugin.defaultVersion": {
          "type": "string",
          "default": "1.1.0-SNAPSHOT",
          "description": "Default plugin version used in templates."
        },
        "gigasoft.update.checkOwner": {
          "type": "string",
          "default": "Lianomeister",
          "description": "GitHub owner used for release checks."
        },
        "gigasoft.update.checkRepo": {
          "type": "string",
          "default": "GigaSoft",
          "description": "GitHub repository used for release checks."
        }
      }
    },
    "snippets": [
      {
        "language": "kotlin",
        "path": "./snippets/kotlin.code-snippets"
      },
      {
        "language": "yaml",
        "path": "./snippets/yaml.code-snippets"
      }
    ]
  },
  "scripts": {
    "lint": "echo \"No lint configured\"",
    "test": "echo \"No tests configured\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lianomeister/GigaSoft"
  },
  "license": "SEE LICENSE IN ../../LICENSE"
}
